<!-- ======= Header ======= -->
<header id="header" class="fixed-top">
  <div class="container d-flex align-items-center">
    <h1 class="logo mr-auto"><a href="/">Superior Essays <span>Pro</span></a></h1>
    <nav class="nav-menu d-none d-lg-block">
      <ul>
        
          <% if @current_user %>
            <li class=<%= (defined?(page) &&  page == 'orders') ? "active" : "" %> >
              <%= link_to client_orders_path, method: :get do %>
                Orders
              <% end %>
            </li>
            <li class=<%= (defined?(page) &&  page == 'archives') ? "active" : "" %> > <a href="/archives">Archives</a></li>
            <li>
              <%= link_to messages_unread_path, method: :get do %>
                Messages
                <span>(<%= Message.unread_for_user(@current_user).count %>)</span>
              <% end %>
            </li>
            <span class="ml-5 mr-1 btn-labeled btn-labeled-left"> <%= @current_user.first_name %></span>
            <%= link_to logout_path, method: :get do %>
              <span class="btn btn-primary btn-labeled btn-labeled-left btn-sm small">Sign out</span>
            <% end %>
          <% else %>
            <li class=<%= (defined?(page) && page == 'home') ? "active" : "" %>><a href="/">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#pricing">Pricing</a></li>
            <li class=<%= (defined?(page) &&  page == 'archives') ? "active" : "" %> > <a href="/archives">Archives</a></li>
            <%= link_to '/auth/google_oauth2', method: :post do %>
              <span class="btn btn-primary btn-labeled btn-labeled-left btn-sm ml-5 small">Sign in</span>
            <% end %>
          <% end %>
      </ul>
    </nav><!-- .nav-menu -->
  </div>
</header><!-- End Header -->