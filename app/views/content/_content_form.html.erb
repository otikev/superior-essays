<%= form_for @content,:html => {:class => 'signup-form'}, :url => url_for(:controller => 'content', :action => 'create', ) do |form| %>
    <div class="card mb-0">
        <div class="card-body">
            <div class="text-center mb-3">
                <h1 class="mb-0">Create new content</h1>
            </div>

            <%= render 'general/error_messages', object: form.object %>

            <div class="row">
                <label class="col-form-label text-left">Title:</label>
            </div>
            <div class="row mb-3">
                <%= form.text_field :title, placeholder: "Title", class: "form-control" , :required=>true %>
            </div>

            <div class="row">
                <label class="col-form-label text-left">Question:</label>
            </div>
            <div class="row mb-3">
                <%= form.text_area :question, placeholder: "Question", class: "form-control" , :required=>true, rows: 3 %>
            </div>

            <div class="row">
                <label class="col-form-label text-left">Answer:</label>
            </div>
            <div class="row mb-3">
                <%= form.text_area :answer, placeholder: "Answer", class: "form-control"  , :required=>false, rows: 20 %>
            </div>

            <%= button_tag(:class => "btn bg-info btn-block") do %>
            Create Content
            <% end %>
        </div>
    </div>
<%end%>