<div class="card">
    <div class="text-center">
        <h1>Pricing Table</h1>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr class="bg-info">
                    <th>Deadline</th>
                    <th>Standard</th>
                    <th>Premium</th>
                    <th>Platinum</th>
                </tr>
            </thead>
            <tbody>
                <% for i in 0..9 %>
                    <tr>
                        <td><%= OrderUrgency.find(i+1).display %></td>
                        <td>$<%= STANDARD_BASE_PRICE + i %></td>
                        <td>$<%= PREMIUM_BASE_PRICE + i %></td>
                        <td>$<%= PLATINUM_BASE_PRICE + i %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>