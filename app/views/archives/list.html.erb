
<% @contents.each do |content|%>
    <div class="card">
        <div class="card-header header-elements-inline">
            <h2 class="card-title">
                <%=  content.title %>
            </h2>
        </div>
        <div class="card-body">
            <%= simple_format content.question.html_safe.truncate_words(300, omission: '... (more)') %>
        </div>
        <div class="card-footer bg-transparent d-sm-flex justify-content-sm-between align-items-sm-center border-top-0 pt-0">
            <ul class="list-inline list-inline-condensed mb-sm-0">
                <li class="list-inline-item">
                    <span class="opacity-50"><%= local_time(content.updated_at, '%B %e, %Y')%></span>
                </li>
            </ul>
            <%= link_to content_path(content), method: :get do %>
                    <span class="btn btn-primary btn-labeled btn-labeled-left btn-lg"><b><i class="icon-cart2"></i></b>View</span>
                <% end %>
        </div>
    </div>
<% end %>

<%= will_paginate @contents %>

