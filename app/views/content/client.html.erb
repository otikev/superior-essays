
<% @contents.each do |content|%>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <h2><%= simple_format(content.question) %></h2>
            </div>
            <div class="row">
                <%= simple_format(truncate(content.answer, length: 300, omission: '... (more)')) %>
            </div>
        </div>
        <div class="card-footer bg-transparent d-sm-flex justify-content-sm-between align-items-sm-center border-top-0 pt-0 pb-3 ">
            <ul class="list-inline list-inline-condensed mb-3 mb-sm-0">
                <li class="list-inline-item">
                    <span class="opacity-50"><%= local_time(content.updated_at)%></span>
                </li>
            </ul>

            <%= link_to '/orders/new', method: :get do %>
                <span class="btn btn-primary btn-labeled btn-labeled-left btn-lg"><b><i class="icon-cart2"></i></b> Order Plagiarism-Free Paper</span>
            <% end %>
        </div>
    </div>
<% end %>

<%= will_paginate @contents %>