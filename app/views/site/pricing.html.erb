<div class="card-body d-sm-flex align-items-sm-center justify-content-sm-between flex-sm-wrap">
    <div class="d-flex align-items-center mb-3 mb-sm-0"></div>
    <div class="d-flex align-items-center mb-3 mb-sm-0">
        <div class="grid">
            <% if @current_user %>
                <%= render 'general/order_creation_form'%>
            <% else %>
                <div class="row">
                    <%= render 'general/pricing_table'%>
                </div>
                <div class="row">
                    <%= link_to 'Place Order'.html_safe, '/auth/google_oauth2', method: :post, :class => "btn btn-primary form-control" %>
                </div>
            <% end %>
        </div>
    </div>
    <div></div>
</div>